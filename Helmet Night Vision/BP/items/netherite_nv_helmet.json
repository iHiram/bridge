{
	"format_version": "1.20.0",
	"minecraft:item": {
		"description": {
			"identifier": "bridge:netherite_nv_helmet",
			"category": "equipment"
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:display_name": {
				"value": "netherite nv"
			},
			"minecraft:durability": {
				"max_durability": 300
			},
			"minecraft:icon": {
				"texture": "bridge_netherite_nv_helmet"
			},
			"minecraft:armor": {
				"protection": 3
			},
			"minecraft:wearable": {
				"slot": "slot.armor.head",
				"dispensable": true
			},
			"minecraft:repairable": {
				"repair_items": [
					{
						"items": [
							"minecraft:netherite_ingot"
						],
						"repair_amount": "query.max_durability * 0.1 * (1 - query.remaining_durability / query.max_durability)"
					},
					{
						"items": [
							"bridge:netherite_nv_helmet"
						],
						"repair_amount": "(query.max_durability - query.remaining_durability) * 0.1"
					}
				]
			},
			"minecraft:equipment": {
				"on_equip": {
					"event": "apply_night_vision"
				},
				"on_unequip": {
					"event": "remove_night_vision"
				}
			}
		},
		"events": {
			"apply_night_vision": {
				"run_command": {
					"command": "say Applying night vision"
				},
				"run_command": {
					"command": "effect @s night_vision 999999 1 true"
				}
			},
			"remove_night_vision": {
				"run_command": {
					"command": "effect @s night_vision 3"
				}
			}
		}
	}
}